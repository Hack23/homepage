{
  // Minimal settings for a pure HTML project with GitHub workflows
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "html": true,
    "css": true
  },
  "github.copilot.advanced": {
    "language.enableAutoCompletions": {
      "html": true,
      "css": true
    }
  },
  // New repository-specific customization for Copilot:
  "github.copilot.editor.customization": {
    "repositoryInstructions": {
      "instructions": "You are working on a static HTML/CSS website focused on security transparency and accessible content. Follow the existing design patterns, maintain a clean and minimal style, ensure responsive layouts, and do not add new featuresâ€”only fix and refine what exists."
    }
  },
  "liveServer.settings.port": 5501
}
