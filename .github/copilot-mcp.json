{
  "$schema": "https://github.com/modelcontextprotocol/specification/blob/main/schema/mcp-config-schema.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspaces/homepage"],
      "description": "Provides secure filesystem access for reading and editing project files",
      "disabled": false
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${COPILOT_MCP_GITHUB_PERSONAL_ACCESS_TOKEN}",
        "GITHUB_OWNER": "Hack23",
        "GITHUB_REPO": "homepage"
      },
      "description": "Provides access to GitHub repository data, issues, PRs, and workflows",
      "disabled": false
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
   "aws-knowledge": {
      "command": "npx",
      "args": ["-y", "fastmcp", "run", "https://knowledge-mcp.global.api.aws"]
    },    
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "/workspaces/homepage"],
      "description": "Provides Git operations and repository history context",
      "disabled": false
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Maintains conversation history and context between agent sessions",
      "disabled": false
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Enables web search for research, documentation, and analysis",
      "disabled": false,
      "note": "Web search enabled for product vision research"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"],
      "description": "Browser automation for screenshots, testing, and visual documentation",
      "disabled": false
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "Fetch and analyze web content from URLs including GitHub repos",
      "disabled": false
    },
    "everart": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everart"],
      "env": {
        "EVERART_API_KEY": "${EVERART_API_KEY}"
      },
      "description": "Generate psychedelic and visionary artwork for product visions",
      "disabled": false,
      "note": "Optional: Enable for AI-generated visionary artwork"
    }
  },
  "globalShortcut": "Ctrl+Shift+Space"
}
